<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".activity.Show_Activity">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/showNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="name"
            android:textColor="@color/white"
            android:textSize="23dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/showCvView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/showNameTxt"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="10dp"

            >

            <ImageView
                android:id="@+id/showImgView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/showTitelTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/showCvView"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/showDesciTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/showTitelTxt"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="Describe"
            android:textColor="@color/white"
            android:textSize="17dp"

            />

        <TextView
            android:id="@+id/showName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/showDesciTxt"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="Author:"
            android:textColor="@color/white"
            android:textSize="17dp"

            />
        <TextView
            android:id="@+id/showAuthorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/showDesciTxt"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="hi"
            android:layout_toEndOf="@id/showName"
            android:textColor="@color/white"
            android:textSize="17dp"
            />


        <TextView
            android:id="@+id/showcontect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/showName"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="Contect:"
            android:textColor="@color/white"
            android:textSize="17dp"

            />
        <TextView
            android:id="@+id/showContectNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/showName"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="hi"
            android:layout_toEndOf="@id/showName"
            android:textColor="@color/white"
            android:textSize="17dp"
            />

    </RelativeLayout>

</RelativeLayout>